{
  "name": "Nu Invest Enhancement",
  "description": "Nu Invest Enhancement",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "./images/icon-16.png",
    "32": "./images/icon-32.png",
    "48": "./images/icon-48.png",
    "128": "./images/icon-128.png"
  },
  "action": {
    "default_popup": "./popup/index.html",
    "default_title": "Teste",
    "default_icon": {
      "16": "./images/icon-16.png",
      "32": "./images/icon-32.png"
    }
  },
  "permissions": [
    "webRequest",
    "webNavigation",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.nuinvest.com.br/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.nuinvest.com.br/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}